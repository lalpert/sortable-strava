{
  "manifest_version": 2,

  "name": "Strava Segment Sorter",
  "description": "Sort your Strava segments by your performance",
  "version": "1.0.0",

  "permissions": [
    "https://www.strava.com/",
    "http://www.strava.com/",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Make Strava page sortable",
    "default_icon": "strava.png"
  }
}
